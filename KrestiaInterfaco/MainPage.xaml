<Page
   x:Class="KrestiaInterfaco.MainPage"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="using:KrestiaInterfaco"
   xmlns:iloj="using:KrestiaInterfaco.Iloj"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d"
   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
   <Page.Resources>
      <iloj:VorttipoConverter x:Key="VorttipoConverter"/>
   </Page.Resources>
   <StackPanel Orientation="Vertical">
      <CommandBar DefaultLabelPosition="Right">
         <CommandBar.PrimaryCommands>
            <AppBarButton
               x:Name="Aldoni_AppBarButton" 
               Icon="Add"
               Label="Aldoni">
               <AppBarButton.Flyout>
                  <Flyout>
                     <StackPanel>
                        <StackPanel Orientation="Horizontal">
                           <RadioButton Content="Klaso" x:Name="Klaso_RadioButton"
                                        Checked="RadioButton_Checked"/>
                           <RadioButton Content="Verbo" x:Name="Verbo_RadioButton"
                                        Checked="RadioButton_Checked"/>
                           <RadioButton Content="Pridiranto" x:Name="Pridiranto_RadioButton"
                                        Checked="RadioButton_Checked"/>
                        </StackPanel>
                        <TextBlock x:Name="NovaVorto_TextBlock"
                                   Text="{x:Bind NovaVorto, Mode=OneWay, Converter={StaticResource VorttipoConverter}}"/>
                        <TextBox x:Name="NovaVorto_TextBox"
                                 PlaceholderText="Nova vorto"
                                 Text="{x:Bind NovaVorto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 AllowFocusOnInteraction="True"/>
                        <CheckBox x:Name="ĈuAnimeco_CheckBox"
                                  Visibility="{x:Bind KreiKlason, Mode=OneWay}"
                                  Content="Havas animecon"/>
                        <Slider x:Name="Valenco_Slider"
                                Visibility="{x:Bind KreiVerbon, Mode=OneWay}"
                                Minimum="0"
                                Maximum="3"/>
                        <Button x:Name="Krei_Button" Content="Krei"
                                Click="Aldoni_Click"/>
                     </StackPanel>
                  </Flyout>
               </AppBarButton.Flyout>
            </AppBarButton>
         </CommandBar.PrimaryCommands>
      </CommandBar>
      <Grid>
         <Grid.ColumnDefinitions>
         </Grid.ColumnDefinitions>
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

      </Grid>
   </StackPanel>
</Page>
